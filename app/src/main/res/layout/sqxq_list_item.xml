<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/sli_left_contain"
            android:layout_width="40dp"
            android:layout_height="140dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="0.1dp"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:background="@color/gray"
                />

            <ImageView
                android:id="@+id/sli_status"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/sq_state1"/>


            <TextView
                android:layout_width="0.1dp"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_weight="3"
                android:background="@color/gray"
                />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@android:drawable/alert_light_frame"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/sli_left_contain"
            android:layout_toEndOf="@+id/sli_left_contain"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/sli_image"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/addprocess"
                android:gravity="center"
                android:text="Admin"
                android:textColor="@color/white"
                />

           <TextView
                android:id="@+id/sli_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/sli_image"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/sli_image"
                android:layout_toRightOf="@+id/sli_image"
                android:text="审批完成(同意)"/>

            <TextView
                android:id="@+id/sli_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/sli_image"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/sli_image"
                android:layout_toRightOf="@+id/sli_image"
                android:text="zby的报销申请"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/sli_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:text="2016.08.18"
                android:layout_alignBaseline="@+id/sli_state"
                android:layout_alignBottom="@+id/sli_state"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


    </RelativeLayout>
</layout>