<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/wfqd_image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:background="@android:drawable/ic_menu_recent_history"
            android:contentDescription="申请报销图标"
            />

        <TextView
            android:id="@+id/wfqd_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审批完成(同意)"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignBottom="@+id/wfqd_image"
            android:layout_toRightOf="@+id/wfqd_image"
            android:layout_toEndOf="@+id/wfqd_image"/>

        <TextView
            android:id="@+id/wfqd_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:text="2016.08.18"
            android:layout_alignTop="@+id/wfqd_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/wfqd_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zby的报销申请"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/wfqd_image"
            android:layout_toRightOf="@+id/wfqd_image"
            android:layout_toEndOf="@+id/wfqd_image"/>
    </RelativeLayout>

</layout>